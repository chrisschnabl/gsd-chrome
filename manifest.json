{
  "name": "Lovable A/B Test Assistant",
  "description": "Reads code from Lovable file editor to provide intelligent A/B testing recommendations for your prompts.",
  "version": "0.1",
  "manifest_version": 3,
  "permissions": ["tabs", "webNavigation", "scripting", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "background": { "service_worker": "background.js" },
  "action": {
    "default_popup": "index.html",
    "default_icon": "favicon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["button.svg", "mock.json"],
      "matches": ["<all_urls>"]
    }
  ]
}
